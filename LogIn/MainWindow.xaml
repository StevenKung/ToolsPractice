<Window x:Class="LogIn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogIn"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300">
	<Window.Resources>
		<DataTemplate DataType="{x:Type local:LoginViewModel}">
			<local:UserControlLogin/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type local:RegisterViewModel}">
			<local:UserControlRegister/>
		</DataTemplate>
	</Window.Resources>
	
	<Window.DataContext>
		<local:MainViewModel/>
	</Window.DataContext>
	
	<Grid VerticalAlignment="Center">
		<StackPanel>
			<ContentControl Content="{Binding CurrentPage}"/>
			<StackPanel Orientation ="Horizontal" HorizontalAlignment="Center">
				<Button Content="Login" Margin="5" Command="{Binding LoginPageCommand}"/>
				<Button Content="Register" Margin="5" Command="{Binding RegisterPageCommand}"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
