<Window x:Class="LogIn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogIn"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="300"
		DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
	<Window.Resources>
		<DataTemplate DataType="{x:Type local:LoginViewModel}">
			<local:UserControlLogin/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type local:RegisterViewModel}">
			<local:UserControlRegister/>
		</DataTemplate>
	</Window.Resources>
	
	<Grid VerticalAlignment="Top">
		<StackPanel>
			<StackPanel Orientation ="Horizontal" HorizontalAlignment="Right">
				<Button FontSize="10" Content="Logout" Margin="5,5,100,5" Command="{Binding LogoutCommand}"/>
				<Label FontSize="10" Margin="5" Content="{Binding Source={StaticResource Locator}, Path=LoginVM.CurrentUser}"/>
				<Button FontSize="10" Content="Login" Margin="5" Command="{Binding LoginPageCommand}"/>
				<Button FontSize="10" Content="Register" Margin="5" Command="{Binding RegisterPageCommand}"/>
			</StackPanel>
			<ContentControl Content="{Binding CurrentPage}"/>
		</StackPanel>
	</Grid>
</Window>
